  post {
    always  {
        sh 'docker logout'
        archiveArtifacts artifacts: 'target/*.jar'

    }
    success {
      // send mail
      echo "SUCCESS"
    }
  }
  
}


def getLastGitTag() {
    sh "git tag --sort version:refname | tail -1 > version.tmp"
    String tag = readFile 'version.tmp'
    echo "Branch: ${scm.branches[0].name}"


    echo "Tag, ${tag}." 
    return tag
}